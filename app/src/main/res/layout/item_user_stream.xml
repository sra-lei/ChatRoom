<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/userIconImg"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:src="@drawable/if_aunt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/soundLevelFlagImg"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/icon_remote_off"
        app:layout_constraintBottom_toBottomOf="@+id/userIconImg"
        app:layout_constraintEnd_toEndOf="@+id/userIconImg" />

    <TextView
        android:id="@+id/userNameTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="@+id/userIconImg"
        app:layout_constraintStart_toStartOf="@+id/userIconImg"
        app:layout_constraintTop_toBottomOf="@+id/userIconImg" />
</androidx.constraintlayout.widget.ConstraintLayout>