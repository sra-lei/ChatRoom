<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/userIconImg"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/if_aunt" />

    <TextView
        android:id="@+id/soundLevelTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/userIconImg"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:text="3"
        android:textColor="@color/qmui_config_color_red" />

    <TextView
        android:id="@+id/userNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userIconImg"
        android:layout_marginTop="10dp" />
</RelativeLayout>